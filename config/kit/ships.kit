with Commodities;
with Factions;
with Localisation;
with Locations;
with Managed;
with Names;
with Updated;

package Ships is

type Component_Shape is (Cuboid, Cylinder, Ellipsoid, Truncated_Cone);

record Has_Size is
   Width   : Positive;
   Length  : Positive;
   Height  : Positive;
end Has_Size;

record Has_Position is
   X1 : Long_Float;
   Y1 : Long_Float;
   Z1 : Long_Float;
   X2 : Long_Float;
   Y2 : Long_Float;
   Z2 : Long_Float;
end Has_Position;

record Component : Localised, Manufactured, Has_Size is
   Shape   : Component_Shape;
   Crew    : Natural;
   Power   : Long_Float;
end Component;

record Engine : Component is
   Impulse : Long_Float;
end Engine;

record Jump_Drive : Component is
   Jump : Long_Float;
end Jump_Drive;

record Storage : Component is
   Capacity : Long_Float;
end Storage;

record Tank : Storage;

record Hold : Storage;

record Missile_Bay : Storage;

record Fighter_Bay : Storage;

record Crew_Quarters : Storage;

record Passenger_Berth : Storage;

record Generator : Component;

record Shield_Generator : Component is
   Shields : Long_Float;
end Shield_Generator;

record Energy_Weapon : Component is
   Energy : Long_Float;
end Energy_Weapon;

record Missile_Launcher : Component is
   Launchers : Positive;
end Missile_Launcher;
   
record Scanner : Component is
   Scan : Positive;
end Scanner;

record Ship_Design : Has_Name is
   Default_Manager : String (32);
end Ship_Design;

record Design_Module : Has_Position is
   key Ship_Design;
   Component;
end Design_Module;

type Ship_Status is
  (Idle, Activating, Moving, Jumping, Surveying, Training, Repairing, Destroyed);
  
record Ship : Has_Name, Has_Stock, Managed, Updated, Orbiting_Object, Has_Location, Can_Carry is
   key Faction;
   key World;
   key Star_System;
   key Home    : World;
   Status      : Ship_Status;
   Training    : Long_Float;
   Fuel        : Long_Float;
   Destination : Location;
   Departure   : Time;
   Arrival     : Time;
   Start       : Time;
   Goal;
   key Ship_Status with Faction, Status;
end Ship;

record Module : Has_Position is
   key Ship;
   Component;
   Crew       : Natural;
   Condition  : Long_Float;
end Module;

record Engine_Module : Module is
   Engine;
end Engine_Module;

record Jump_Module : Module is
   Jump_Drive;
end Jump_Module;

record Tank_Module : Module is
   Tank;
end Tank_Module;

record Hold_Module : Module is
   Hold;
end Hold_Module;

record Crew_Module : Module is
   Crew_Quarters;
end Crew_Module;

record Passenger_Module : Module is
   Passenger_Berth;
end Passenger_Module;

record Generator_Module : Module is
   Generator;
end Generator_Module;

record Shield_Module : Module is
   Shield_Generator;
end Shield_Module;

record Energy_Weapon_Module : Module is
   Energy_Weapon;
end Energy_Weapon_Module;
 
record Launcher_Module : Module is
   Missile_Launcher;
end Launcher_Module;

record Scanner_Module : Module is
   Scanner;
end Scanner_Module;

end Ships;
